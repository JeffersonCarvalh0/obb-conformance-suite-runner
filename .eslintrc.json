{
  "env": {
    "jest": true
  },
  "extends": [
    "ristretto",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {    
    "project": "./tsconfig.json"
  },
  "ignorePatterns": ["node_modules", "dist", "coverage"],
  "rules": {
    "prettier/prettier": [
      "error",
      {},
      {
        "usePrettierrc": true
      }
    ],
    "no-await-in-loop": "off"
  }
}
